<?xml version="1.0"?>
<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../src/xml/molsimInput.xsd">
    <name_output>A5_TASK4</name_output>
    <frequency_output>10</frequency_output>
    <delta_t>0.0005</delta_t>
    <t_end>1</t_end>
    <linked_cell>true</linked_cell>
    <checkpoint>false</checkpoint>
    <domain>
        <domain_size>
            <x>35</x>
            <y>26</y>
            <z>10</z>
        </domain_size>
        <cutoff_radius>2.75</cutoff_radius>
        <boundary>
            <front>periodic</front>
            <back>periodic</back>
            <top>periodic</top>
            <bottom>periodic</bottom>
            <left>outflow</left>
            <right>outflow</right>
        </boundary>
        <gravity>-0.8</gravity>
    </domain>
    <thermostat>
        <t_init>40</t_init>
        <change_brownian>true</change_brownian>
        <steps>10</steps>
    </thermostat>
    <profiling>true</profiling>
    <profiler>
        <profiling_bins>5</profiling_bins>
        <profiling_frequency>100</profiling_frequency>
        <velocity_profile_path>"v"</velocity_profile_path>
        <density_profile_path>"d"</density_profile_path>
    </profiler>
    <particle_data>
        <meanv>0.1</meanv>
        <is3D>true</is3D>
        <cuboids>
            <!-- left wall -->
            <cuboid>
                <position>
                    <x>1.0</x>
                    <y>0.6</y>
                    <z>0.6</z>
                </position>
                <size>
                    <x>2</x>
                    <y>2</y>
                    <z>2</z>
                </size>
                <distance>1.12</distance>
                <mass>1.0</mass>
                <velocity>
                    <x>0.0</x>
                    <y>0.0</y>
                    <z>0.0</z>
                </velocity>
                <epsilon>2.0</epsilon>
                <sigma>1.1</sigma>
                <fixed>true</fixed>
            </cuboid>
            <!-- right wall -->
            <cuboid>
                <position>
                    <x>27.4</x>
                    <y>0.6</y>
                    <z>0.6</z>
                </position>
                <size>
                    <x>2</x>
                    <y>23</y>
                    <z>9</z>
                </size>
                <distance>1.12</distance>
                <mass>1.0</mass>
                <velocity>
                    <x>0.0</x>
                    <y>0.0</y>
                    <z>0.0</z>
                </velocity>
                <epsilon>2.0</epsilon>
                <sigma>1.1</sigma>
                <fixed>true</fixed>
            </cuboid>
            <!-- fluid -->
            <cuboid>
                <position>
                    <x>3.4</x>
                    <y>0.6</y>
                    <z>0.6</z>
                </position>
                <size>
                    <x>20</x>
                    <y>21</y>
                    <z>8</z>
                </size>
                <distance>1.2</distance>
                <mass>1.0</mass>
                <velocity>
                    <x>0.0</x>
                    <y>0.0</y>
                    <z>0.0</z>
                </velocity>
                <epsilon>1.0</epsilon>
                <sigma>1.0</sigma>
                <fixed>false</fixed>
            </cuboid>
        </cuboids>
        <particles></particles>
        <spheres></spheres>
    </particle_data>
</input>
