<?xml version="1.0"?>
<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../src/xml/molsimInput.xsd">
    <name_output>A4_TASK4</name_output>
    <frequency_output>4096</frequency_output>
    <delta_t>0.0001</delta_t>
    <t_end>0.01</t_end>
    <linked_cell>true</linked_cell>
    <checkpoint>false</checkpoint>
    <domain>
        <domain_size>
            <x>10000</x>
            <y>1000</y>
            <z>1</z>
        </domain_size>
        <cutoff_radius>3</cutoff_radius>
        <boundary>
            <front>outflow</front>
            <back>outflow</back>
            <top>outflow</top>
            <bottom>outflow</bottom>
            <left>outflow</left>
            <right>outflow</right>
        </boundary>
        <gravity>-1</gravity>
    </domain>
    <thermostat>
        <t_init>0.5</t_init>
        <change_brownian>true</change_brownian>
        <steps>1000</steps>
    </thermostat>
    <particle_data>
        <meanv>0.1</meanv>
        <is3D>false</is3D>
        <cuboids>
            <cuboid>
                <position>
                    <x>100</x>
                    <y>100</y>
                    <z>0.0</z>
                </position>
                <size>
                    <x>1000</x>
                    <y>11</y>
                    <z>1</z>
                </size>
                <distance>1</distance>
                <mass>1.0</mass>
                <velocity>
                    <x>0.0</x>
                    <y>0.0</y>
                    <z>0.0</z>
                </velocity>
                <epsilon>1.0</epsilon>
                <sigma>1.2</sigma>
            </cuboid>
        </cuboids>
        <particles></particles>
        <spheres></spheres>
    </particle_data>
</input>
