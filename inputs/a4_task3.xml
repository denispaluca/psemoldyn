<?xml version="1.0"?>
<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../src/xml/molsimInput.xsd">
    <name_output>A4_TASK3</name_output>
    <frequency_output>10</frequency_output>
    <delta_t>0.0005</delta_t>
    <t_end>15</t_end>
    <linked_cell>true</linked_cell>
    <checkpoint>true</checkpoint>
    <domain>
        <domain_size>
            <x>303</x>
            <y>180</y>
            <z>1</z>
        </domain_size>
        <cutoff_radius>3</cutoff_radius>
        <boundary>
            <front>outflow</front>
            <back>outflow</back>
            <top>reflective</top>
            <bottom>reflective</bottom>
            <left>periodic</left>
            <right>periodic</right>
        </boundary>
        <gravity>-12.44</gravity>
    </domain>
    <thermostat>
        <t_init>0.5</t_init>
        <change_brownian>true</change_brownian>
        <steps>1000</steps>
    </thermostat>
    <particle_data>
        <meanv>0.1</meanv>
        <is3D>false</is3D>
        <cuboids>
            <cuboid>
                <position>
                    <x>1.5</x>
                    <y>2</y>
                    <z>0.0</z>
                </position>
                <size>
                    <x>250</x>
                    <y>50</y>
                    <z>1</z>
                </size>
                <distance>1.2</distance>
                <mass>1.0</mass>
                <velocity>
                    <x>0.0</x>
                    <y>0.0</y>
                    <z>0.0</z>
                </velocity>
                <epsilon>1.0</epsilon>
                <sigma>1.0</sigma>
            </cuboid>
        </cuboids>
        <particles></particles>
        <spheres></spheres>
    </particle_data>
</input>
